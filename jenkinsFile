pipeline  {
    agent any
    stages {
        
        stage('Checkout'){
            steps {
                git branch: 'main', 
                credentialsId: 'git-cred-todoapp', 
                url: 'https://github.com/adewalegbadamosi/todoapp'
            }
        }

        stage('Build') {
          
            steps {
            
                sh """                
                    npm i && \
                    npm run build                  
                """
                
            }
        }
   
    }
}
