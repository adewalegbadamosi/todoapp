pipeline  {

    agent any
    
    tools {nodejs "NODEJS"} 
    
    stages {
        
        stage('Checkout'){
            steps {
                git branch: 'main', 
                credentialsId: 'git-cred-todoapp', 
                url: 'https://github.com/adewalegbadamosi/todoapp'
            }
        }

        stage('Build') {
          
            steps {
            
                sh """                
                    npm install && \
                    npm run build                  
                """
                
            }
        }
   
    }
}
