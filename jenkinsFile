pipeline  {

    agent any
    
    tools {nodejs "nodejs"} 
    
    stages {
        
        stage('Checkout SCM'){
            steps {
                git branch: 'main', 
                //credentialsId: 'git-cred-todoapp', 
                url: 'https://github.com/adewalegbadamosi/todoapp'
            }
        }

        stage('install') {
          
            steps {
            
                sh """                
                    
                    npm i               
                """
                
            }
        }

        stage('Build') {
          
            steps {
            
                sh """                
                    
                    npm run build --prod               
                """                
            }
        }        
        
        stage('copy to www html') {
          
            steps {            
                sh """
                whoami && \
                cp -a /var/lib/jenkins/workspace/first-job/dist/TodoApp/.  /var/www/html
                """                               
            }
        }   
    }
}
